@model IEnumerable<CRUD_image.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card mt-2">
    <div class="card-header">
        <h1>All Products</h1>
        <p class="d-flex justify-content-end card-subtitle">
            <a asp-action="Create" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i> Create New</a>
        </p>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-striped table-sm">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Unit)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>
                       @Html.DisplayNameFor(model => model.Image)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Unit)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @{
                                var b64 = Convert.ToBase64String(item.Image);
                                var imgSrc = String.Format("data:image/jpg;base64,{0}", b64);
                            }
                            <img src="@imgSrc" alt="Product Image" style="width:42px;" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ImageFile)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a> |
                            <a asp-action="Details" asp-route-id="@item.Id"> <i class="fa fa-eye"></i></a> |
                            <a asp-action="Delete" asp-route-id="@item.Id"> <i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
