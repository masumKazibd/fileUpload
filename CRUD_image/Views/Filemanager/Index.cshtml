@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col">
        <h1 class="display-4 alert alert-info mt-2 text-center">File Upload Manager</h1>
        <h3 class="text-primary text-center display-6">@ViewBag.msg</h3>
    </div>
</div>

<div class="row">
    <div class="col-6 offset-3">
        <form asp-action="UploadFile" asp-controller="Filemanager" enctype="multipart/form-data" method="post">
            <label>File :</label>
            <input type="file" name="fileToUpload" value="" class="form-control" />
            <button type="submit" class="btn btn-primary mt-1"><i class="fa fa-upload"></i> Upload File</button>
        </form>
    </div>
</div>